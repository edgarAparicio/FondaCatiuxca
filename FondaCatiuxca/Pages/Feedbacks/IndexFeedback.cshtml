@page
@model FondaCatiuxca.Pages.Feedbacks.IndexFeedbackModel

@{
    ViewData["Title"] = "Comentarios";
}

<h2>Comentarios</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Feedback.Nombre"></label>
        <input asp-for="Feedback.Nombre" class="form-control" />
        <span class="text-danger" asp-validation-for="Feedback.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Feedback.Email"></label>
        <input asp-for="Feedback.Email" class="form-control" />
        <span class="text-danger" asp-validation-for="Feedback.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Feedback.Mensaje"></label>
        <input asp-for="Feedback.Mensaje" class="form-control" />
        <span class="text-danger" asp-validation-for="Feedback.Mensaje"></span>
    </div>
    <div class="form-group">
        <label asp-for="Feedback.Contacto"></label>
            <input type="checkbox" asp-for="Feedback.Contacto"/>
    </div>
    <br />
        <button type="submit" class="btn btn-primary">Enviar Comentarios</button>
        <a asp-page="/Index" class="btn btn-primary">Cancelar</a>


</form>