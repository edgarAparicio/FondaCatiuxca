@page
@model FondaCatiuxca.Pages.IndexModel
@{
    ViewData["Title"] = "Fonda Catiuxca";
}

<h1>Menus</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="NombreMenu"/>
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>


@foreach (var menu in Model.Menus)
{
    <partial name="Menus/_partialViewListaMenus" model="menu" />
}

<a asp-page="./Menus/EditarMenu" class="btn btn-primary">Crear Nuevo Menu</a>

@section footer{ 
    <div>Fonda Catiuxca 2020</div>
}
