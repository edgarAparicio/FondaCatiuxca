@page "{idMenu:int}"
@model FondaCatiuxca.Pages.Menus.EditarMenuModel
@{
    ViewData["Title"] = "Editar Menu";
}

<h2>@Model.Menu.Nombre</h2>

<form method="post">
    <input type="hidden" asp-for="Menu.Id"/>
    <div class="form-group">
        <label asp-for="Menu.Nombre"></label>
        <input asp-for="Menu.Nombre" class="form-control"/>
        <span class="text-danger" asp-validation-for="Menu.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Menu.Descripcion"></label>
        <input asp-for="Menu.Descripcion" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Menu.TipoComida"></label>
        <select class="form-control" asp-for="Menu.TipoComida" asp-items="Model.TipoComidaSelectList"></select>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="/Index" class="btn btn-primary">Cancelar</a>

</form>

